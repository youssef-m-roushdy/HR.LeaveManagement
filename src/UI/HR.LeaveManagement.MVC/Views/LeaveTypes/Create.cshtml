@model HR.LeaveManagement.MVC.Models.CreateLeaveTypeVM

@{
    ViewData["Title"] = "Create Leave Type";
}

<h1 class="mb-4">Create Leave Type</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Enter Leave Type Details</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mt-3">
                        <label asp-for="Name" class="control-label font-weight-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter leave type name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="DefaultDays" class="control-label font-weight-bold"></label>
                        <input asp-for="DefaultDays" class="form-control" placeholder="Enter default days" />
                        <span asp-validation-for="DefaultDays" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus-circle"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 0.75rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>