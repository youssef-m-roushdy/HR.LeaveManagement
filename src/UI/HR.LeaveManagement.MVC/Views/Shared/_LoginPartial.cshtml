<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Display the username -->
        <li class="nav-item">
            <a class="nav-link text-dark" href="#" title="Manage">
                @User.Identity.Name
            </a>
        </li>

        <!-- Logout button -->
        <li class="nav-item">
            <form class="form-inline" method="post" asp-action="Logout" asp-controller="Users" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <!-- Register link -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Users">
                Register
            </a>
        </li>

        <!-- Login link -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Users">
                Login
            </a>
        </li>
    }
</ul>